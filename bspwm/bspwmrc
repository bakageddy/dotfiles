#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV

bspc config border_width            0
bspc config window_gap              15

bspc config split_ratio             0.50
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focused_border_color	"#95c4ce"
bspc config active_border_color     "#84a0c6"
bspc config normal_border_color     "#a093c7"
bspc config presel_feedback_color 	"#89b8c2"

bspc rule -a Zathura state=tiled
bspc rule -a Emacs state=tiled

feh --bg-scale ~/.software/wallpapers/Nord/nord-aquarium.png &
pidof polybar || pkill polybar
$HOME/.software/polybar-collection/themes/minimal/launch.sh &
pidof picom || pkill picom
picom -f --experimental-backends &
xsetroot -cursor_name left_ptr
setxkbmap -option "ctrl:swapcaps"
# pidof dunst && pkill dunst
# dunst &
